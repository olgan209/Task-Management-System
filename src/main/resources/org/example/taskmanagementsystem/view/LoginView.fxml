<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER" styleClass="vbox" stylesheets="@style/LoginStyle.css">
    <!-- Заголовок -->
    <Label text="Авторизация" styleClass="label" />

    <!-- Поле для логина -->
    <Label text="Логин:" styleClass="label" />
    <TextField fx:id="usernameField" promptText="Введите ваш логин" styleClass="text-field" />

    <!-- Поле для пароля -->
    <Label text="Пароль:" styleClass="label" />
    <PasswordField fx:id="passwordField" promptText="Введите ваш пароль" styleClass="text-field" />

    <!-- Кнопка авторизации -->
    <HBox spacing="10" alignment="CENTER" styleClass="hbox">
        <Button text="Войти" fx:id="loginButton" styleClass="button" />
    </HBox>
</VBox>
