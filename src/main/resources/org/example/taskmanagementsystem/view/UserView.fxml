<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" spacing="15" alignment="CENTER" styleClass="vbox" stylesheets="@style/UserManagementStyle.css">
    <Label text="Управление пользователями" styleClass="label" />

    <Label text="Список пользователей:" styleClass="label" />
    <ListView fx:id="userListView" styleClass="list-view" />

    <HBox spacing="10" alignment="CENTER" styleClass="hbox">
        <Button text="Добавить" fx:id="addUserButton" styleClass="button" />
        <Button text="Удалить" fx:id="deleteUserButton" styleClass="button" />
        <Button text="Изменить" fx:id="editUserButton" styleClass="button" />
    </HBox>
</VBox>
